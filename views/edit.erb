<h1>Modifier le restaurant "<%= @restaurant.name %>"</h1>

<form action="/restaurants/<%= @restaurant.id %>" method="post">
  <input type="hidden" name="_method" value="PUT">
  <div>
    <label for="name">Nom</label>
    <input type="text" name="name" id="name" value="<%= @restaurant.name %>">
  </div>
  <div>
    <label for="address">Addresse</label>
    <input type="address" name="address" id="address" value="<%= @restaurant.address %>">
  </div>
  <input type="submit">
</form>
